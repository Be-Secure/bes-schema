{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/Be-Secure/bes-schema/main/validation/assessment-report-schema-validator.json",
  "title": "Open Source Assessment Report Schema",
  "description": "A schema for describing the open source assessment report in Be-Secure.",
  "type": "object",
  "properties": {
    "schema_version": {
      "type": "string"
    },
    "asset": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["Project", "Model"]
        },
        "name": {
          "type": "string"
        },
        "url": {
          "type": "string"
        },
        "environment": {
          "type": "string"
        }
      }
    },
    "assessments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "tool": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "type": {
                "type": "string"
              },
              "version": {
                "type": "string"
              },
              "playbook": {
                "type": "string"
              }
            }
          },
          "execution": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["Organization", "Individual"]
              },
              "id": {
                "type": "string"
              },
              "status": {
                "type": "string",
                "enum": ["Success", "Failure"]
              },
              "timestamp": {
                "$ref": "#/$defs/timestamp"
              },
              "duration": {
                "type": "string"
              },
              "output_path": {
                "type": "string"
              }
            }
          },
          "results": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "feature": {
                  "type": "string"
                },
                "aspect": {
                  "type": "string"
                },
                "attribute": {
                  "type": "string"
                },
                "value": {
                  "type": "number"
                }
              }
            }
          }
        }
      }
    }
  },
  "$defs": {
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "pattern": "[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}(\\.[0-9]+)?Z"
    }
  }
}
